@model List<Category>

<div class="container">
    <div class="row">
        <div class="col-6 pt-2 text-primary">
            <h3>Categories</h3>
        </div>
        <div class="col-6 pb-3 text-end">
            <a asp-area="" asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-patch-plus-fill"></i> New Category</a>
        </div>

    </div>

<div class="table-responsive overflow-y-scroll" style="height:500px;display:block">
    <table class="table table-striped table-hover">
        <thead class="border">
        <tr>
            <th>
                Category Order
            </th>
            <th>
                Category Name
            </th>
            <th>
                Action
            </th>
        </tr> 
        </thead>
        <tbody class="border">
            
               @foreach(var item in Model.OrderBy(x => x.DisplayOrder))
                {
                    <tr>
                        <td>
                            @item.DisplayOrder
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <div class="w-50 btn-group" role="group">
                                <a class="mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a class="mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>
</div>
