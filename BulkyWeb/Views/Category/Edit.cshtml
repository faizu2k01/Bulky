@model Category


<form method="post">
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h3 class="text-primary">Edit Category</h3>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name" class="text-primary mb-1"></label>
            <input asp-for="Name" class="form-control"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="text-primary mb-1"></label>
            <input  asp-for="DisplayOrder" class="form-control"/>
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <div class="row pb-4">
                <div class="col-6 col-md-3">
                <button class="btn btn-outline-primary form-control" type="submit">Update</button>
                </div>
                <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>
                </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}