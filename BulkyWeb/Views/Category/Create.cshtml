@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">Create Category</h3>
            <hr />
        </div>
        <div class="text-danger-emphasis" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"  class="text-primary mb-1"></label>
            <input asp-for="Name" class="form-control"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="text-primary mb-1"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <div class="row pb-4">
            <div class="col-6 col-md-3">
                <button class="btn btn-outline-primary form-control" type="submit">Add</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">Back</a> 
            </div>
        </div>
    </div>
</form>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}