@page
@model BulkyRazorWebApp.Pages.Categories.DeleteModel




<form method="post">
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h3 class="text-primary">Delete Category</h3>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input hidden asp-for="category.Id" />

        <div class="mb-3">
            <label asp-for="category.Name" class="text-primary mb-1"></label>
            <input asp-for="category.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="category.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="category.DisplayOrder" class="text-primary mb-1"></label>
            <input asp-for="category.DisplayOrder" class="form-control" />
            <span class="text-danger" asp-validation-for="category.DisplayOrder"></span>
        </div>
        <div class="row pb-4">
            <div class="col-6 col-md-3">
                <button class="btn btn-outline-primary form-control" type="submit">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>

    </div>
</form>


