@page
@model BulkyRazorWebApp.Pages.Categories.CreateModel



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">Create Category</h3>
            <hr />
        </div>
        <div class="text-danger-emphasis" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="category.Name" class="text-primary mb-1"></label>
            <input asp-for="category.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="category.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="category.DisplayOrder" class="text-primary mb-1"></label>
            <input asp-for="category.DisplayOrder" class="form-control" />
            <span class="text-danger" asp-validation-for="category.DisplayOrder"></span>
        </div>
        <div class="row pb-4">
            <div class="col-6 col-md-3">
                <button class="btn btn-outline-primary form-control" type="submit">Add</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control" asp-page="/categories/index">Back</a>
            </div>
        </div>
    </div>
</form>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
