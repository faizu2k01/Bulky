@model List<Product>


<div class="card mb-lg-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Categories</h3>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <div class="row pb-2">
            <div class="col-12 pb-3 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary"> <i class="bi bi-patch-plus-fill"></i> New Product</a>
            </div>

        </div>

        <div class="table-responsive overflow-y-auto overflow-x-hidden">
            <table id="tblData" class="table table-striped table-bordered border-1">
                <thead class="border">
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            ISBN
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
               
            </table>
        </div>
    
    </div>

</div>



@section Scripts{
    <script src="~/js/product.js"></script>
}

