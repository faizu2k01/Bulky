@model List<Category>


<div class="card">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Categories</h3>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <div class="row pb-2">
            <div class="col-12 pb-3 text-end">
                <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-patch-plus-fill"></i> New Category</a>
            </div>

        </div>

        <div class="table-responsive overflow-y-scroll" style="height:100%;max-height:300px;display:block">
            <table class="table table-striped table-hover">
                <thead class="border">
                    <tr>
                        <th>
                            Category Order
                        </th>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody class="border">

                    @foreach (var item in Model.OrderBy(x => x.DisplayOrder))
                    {
                        <tr>
                            <td>
                                @item.DisplayOrder
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <div class="w-50 btn-group" role="group">
                                    <a class="mx-2" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a class="mx-2" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    
    </div>

</div>



