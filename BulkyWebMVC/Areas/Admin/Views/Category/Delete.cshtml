@model Category


<div class="card">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Delete Category</h3>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div class="text-danger-emphasis" asp-validation-summary="All"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="mxs2"></label>
                    <span class="text-danger" asp-validation-for="DisplayOrder"></span>
                </div>
                <div class="row pb-4 mt-4">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-outline-primary form-control" type="submit">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>





@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}